<%- include('../partials/header', { title }) %>

<section class="admin-header">
  <div>
    <h2>Đơn hàng của tôi</h2>
    <p>Theo dõi trạng thái đơn hàng và điểm thưởng.</p>
  </div>
</section>

<% if (typeof error !== 'undefined' && error) { %>
  <p class="alert alert-error"><%= error %></p>
<% } else if (typeof msg !== 'undefined' && msg === 'not_found') { %>
  <p class="alert alert-error">Không tìm thấy đơn hàng.</p>
<% } %>

<div class="table-wrapper">
  <table class="table">
    <thead>
      <tr>
        <th>Mã đơn</th>
        <th>Ngày đặt</th>
        <th>Trạng thái</th>
        <th>Tổng tiền</th>
        <th>Điểm thưởng</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if (orders.length === 0) { %>
        <tr>
          <td colspan="6" style="text-align:center;color:var(--muted)">Bạn chưa có đơn hàng nào.</td>
        </tr>
      <% } %>
      <% orders.forEach((order) => { %>
        <tr>
          <td data-label="Mã đơn">#<%= order._id.toString().slice(-6) %></td>
          <td data-label="Ngày đặt"><%= new Date(order.createdAt).toLocaleString('vi-VN', { timeZone: 'Asia/Ho_Chi_Minh' }) %></td>
          <td data-label="Trạng thái"><span class="status status-<%= order.status %>"><%= order.status %></span></td>
          <td data-label="Tổng tiền"><%= (order.totalPrice || 0).toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></td>
          <td data-label="Điểm thưởng"><%= order.pointEarned || 0 %></td>
          <td data-label="Chi tiết"><a class="btn btn-secondary" href="/orders/<%= order._id %>">Chi tiết</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
