<%- include('partials/header', { title }) %>
<h2>Đặt mật khẩu</h2>
<% if (error) { %><p style="color:red"><%= error %></p><% } %>
<form method="POST" action="/auth/set-password">
  <label>Email</label><input name="email" type="email" value="<%= email %>" required>
  <label>Mật khẩu</label><input name="password" type="password" minlength="6" required>
  <button>Lưu</button>
</form>
<%- include('partials/footer') %>
