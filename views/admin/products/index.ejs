<%- include('../../partials/header', { title: 'Quản lý sản phẩm' }) %>

<section class="admin-header">
  <div>
    <h2>Quản lý sản phẩm</h2>
    <p>Thêm, chỉnh sửa và xóa sản phẩm trong cửa hàng của bạn.</p>
  </div>
  <a class="btn btn-primary" href="/admin/products/new">+ Thêm sản phẩm</a>
</section>

<% if (typeof error !== 'undefined' && error) { %>
  <p class="alert alert-error"><%= error %></p>
<% } else if (typeof success !== 'undefined' && success) { %>
  <% if (success === 'created') { %>
    <p class="alert alert-success">Đã tạo sản phẩm mới.</p>
  <% } else if (success === 'updated') { %>
    <p class="alert alert-success">Đã cập nhật sản phẩm.</p>
  <% } else if (success === 'deleted') { %>
    <p class="alert alert-success">Đã xóa sản phẩm.</p>
  <% } else if (success === 'not_found') { %>
    <p class="alert alert-error">Không tìm thấy sản phẩm.</p>
  <% } else if (success === 'false') { %>
    <p class="alert alert-error">Có lỗi xảy ra, vui lòng thử lại.</p>
  <% } %>
<% } %>

<div class="admin-products-layout">
  <form class="admin-filters" method="GET" action="/admin/products">
  <input type="hidden" name="page" value="1" />
  <label style="display:flex; flex-direction:column; gap:6px">
    Tìm kiếm
    <input type="search" name="q" value="<%= (filterState && filterState.q) || '' %>" placeholder="Tên, mô tả, slug..." />
  </label>
  <label style="display:flex; flex-direction:column; gap:6px">
    Loại
    <select name="type">
      <option value="" <%= !filterState || filterState.type === '' ? 'selected' : '' %>>Tất cả</option>
      <option value="indoor" <%= filterState && filterState.type === 'indoor' ? 'selected' : '' %>>Cây trong nhà</option>
      <option value="outdoor" <%= filterState && filterState.type === 'outdoor' ? 'selected' : '' %>>Cây ngoài trời</option>
      <option value="pot" <%= filterState && filterState.type === 'pot' ? 'selected' : '' %>>Chậu cây</option>
    </select>
  </label>
  <label style="display:flex; flex-direction:column; gap:6px">
    Thương hiệu
    <select name="brand">
      <option value="">Tất cả</option>
      <% (brandOptions || []).forEach((b) => { %>
        <option value="<%= b %>" <%= filterState && filterState.brand === b ? 'selected' : '' %>><%= b %></option>
      <% }) %>
    </select>
  </label>
  <label style="display:flex; flex-direction:column; gap:6px">
    Sắp xếp
    <select name="sort" onchange="this.form.submit()">
      <% (sortOptions || []).forEach((opt) => { %>
        <option value="<%= opt.key %>" <%= sortKey === opt.key ? 'selected' : '' %>><%= opt.label %></option>
      <% }) %>
    </select>
  </label>
  <div class="filters-actions">
    <button class="btn btn-primary" type="submit">Áp dụng</button>
    <a class="btn btn-secondary" href="/admin/products">Xóa lọc</a>
  </div>
  <% if (typeof pagination !== 'undefined') { %>
    <div class="filters-pageinfo">Trang <%= pagination.page %>/<%= pagination.totalPages %></div>
  <% } %>
  
  </form>

  <div class="table-wrapper">
  <table class="table">
    <thead>
      <tr>
        <th>Tên</th>
        <th>Danh mục</th>
        <th>Giá</th>
        <th>Kho</th>
        <th>Loại</th>
        <th>Cập nhật</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if (products.length === 0) { %>
        <tr>
          <td colspan="7" style="text-align:center;color:var(--muted)">Chưa có sản phẩm nào.</td>
        </tr>
      <% } %>
      <% products.forEach((product) => { %>
        <tr>
          <td>
            <strong><%= product.name %></strong>
            <div class="meta">Slug: <%= product.slug %></div>
          </td>
          <td><%= product.categoryID ? product.categoryID.name : '—' %></td>
          <td><%= product.price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %></td>
          <td><%= (categoryLabels[product.type] || product.type) %></td>
          <td><%= product.updatedAt ? new Date(product.updatedAt).toLocaleString('vi-VN', { timeZone: 'Asia/Ho_Chi_Minh' }) : '' %></td>
          <td class="actions">
            <a class="btn btn-secondary" href="/admin/products/<%= product._id %>/edit">Sửa</a>
            <form method="POST" action="/admin/products/<%= product._id %>/delete" onsubmit="return confirm('Bạn chắc chắn muốn xóa sản phẩm này?');">
              <button type="submit" class="btn btn-danger">Xóa</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<% if (typeof pagination !== 'undefined' && pagination.totalPages >= 1) { %>
  <nav class="pagination" style="margin:16px 0; display:flex; gap:8px; flex-wrap:wrap">
    <% for (let p = 1; p <= pagination.totalPages; p++) { 
         const qs = (typeof baseQueryString !== 'undefined' && baseQueryString) ? `${baseQueryString}&page=${p}` : `page=${p}`;
    %>
      <a href="/admin/products?<%= qs %>" class="<%= p === pagination.page ? 'active' : '' %>"><%= p %></a>
    <% } %>
  </nav>
<% } %>

    </div> <!-- .table-wrapper -->

  </div> <!-- .admin-products-layout -->

  <%- include('../../partials/footer') %>
