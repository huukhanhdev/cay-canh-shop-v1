<%- include('partials/header', { title }) %>

<section class="auth-container fade-in-up">
  <h2 class="auth-title">Quên mật khẩu</h2>
  <% if (error) { %><p class="alert-inline-error"><%= error %></p><% } %>
  <% if (locals.msg === 'otp_required') { %>
    <p class="alert-inline-error">Bạn cần nhập đúng OTP đã gửi đến email để đặt lại mật khẩu.</p>
  <% } %>
  <div class="auth-card">
    <form method="POST" action="/auth/forgot">
      <label>Email
        <input name="email" type="email" required>
      </label>
      <div class="auth-actions">
        <button class="btn btn-primary" type="submit">Gửi OTP</button>
      </div>
    </form>
  </div>
</section>

<%- include('partials/footer') %>
