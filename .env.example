# ====================
# APPLICATION CONFIG
# ====================
PORT=4000
MONGODB_URI=mongodb://localhost:27017/caycanhshop
SESSION_SECRET=your-random-secret-here
APP_BASE_URL=http://localhost:4000

# ====================
# EMAIL CONFIGURATION
# ====================
# SMTP Gmail (dùng App Password, không dùng mật khẩu thường)
# Generate App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
MAIL_FROM="\"Cây Cảnh Shop\" <your-email@gmail.com>"

# ====================
# OAUTH CONFIGURATION
# ====================
# Google OAuth 2.0 (for social login)
# Get credentials: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id-here
GOOGLE_CLIENT_SECRET=your-client-secret-here
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# ====================
# AI INTEGRATION
# ====================
# Google Gemini API for chatbot
# Get API key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ====================
# PAYMENT GATEWAYS
# ====================
# Momo Payment Gateway (Test environment)
# Documentation: https://developers.momo.vn/
MOMO_PARTNER_CODE=MOMO
MOMO_ACCESS_KEY=your-access-key-here
MOMO_SECRET_KEY=your-secret-key-here
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create
MOMO_REDIRECT_URL=http://localhost:4000/payment/momo/return
MOMO_IPN_URL=http://localhost:4000/payment/momo/ipn
